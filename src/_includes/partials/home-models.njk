{# Models grid â€” 4 cards, first spans 2 cols on desktop #}
<section class="home-models section" aria-label="Models">
  <div class="container">
    <p class="kicker">The Range</p>
    <h2>Models</h2>

    <div class="home-models__grid">
      {%- for img in homeAssets.models %}
      <a class="home-models__card{% if loop.first %} home-models__card--feature{% endif %}" href="/pages/models/" style="background-image:url('{{ img }}')">
        <span class="home-models__card-inner">
          <span class="home-models__card-micro">{{ homeCopy.models[loop.index0].subtitle }}</span>
          <span class="home-models__card-title">{{ homeCopy.models[loop.index0].title }}</span>
        </span>
      </a>
      {%- endfor %}
    </div>
  </div>
</section>
