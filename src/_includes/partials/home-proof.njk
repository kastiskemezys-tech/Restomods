<section class="home-proof section section--border" aria-label="Build evidence">
  <div class="container">
    <div class="plate">
      <p class="plate__kicker">Process / Evidence</p>
      <h2 class="plate__title">The Build Record</h2>
      <div class="plate__rule"></div>
    </div>

    <div class="home-proof__grid">
      {%- for item in homeCopy.proof %}
      <div class="home-proof__card">
        <div class="home-proof__stamp">
          <img src="/assets/img/ornaments/serial-stamp.svg" alt="" width="80" height="28" />
          <span class="home-proof__serial">{{ item.serial }}</span>
        </div>
        <div class="home-proof__img img-grade" style="background-image:url('{{ item.image }}')"></div>
        <div class="home-proof__body">
          <h3>{{ item.title }}</h3>
          <p>{{ item.text }}</p>
        </div>
      </div>
      {%- endfor %}
    </div>
  </div>
</section>
