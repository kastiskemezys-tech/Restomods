{# Hero mosaic — 3×3 grid + watermark seal + grain overlay #}
<section class="home-hero grain" aria-label="{{ homeCopy.hero.h1 }}">
  <div class="home-hero__grid">
    {%- for img in homeAssets.heroGrid %}
    <div class="home-hero__cell" style="background-image:url('{{ img }}')"></div>
    {%- endfor %}
  </div>

  <div class="home-hero__overlay">
    <div class="container home-hero__inner">
      <div class="home-hero__seal" style="background-image:url('{{ homeAssets.brand.logoWhite }}')"></div>
      <h1>{{ homeCopy.hero.h1 }}</h1>
      <p class="home-hero__sub">{{ homeCopy.hero.subhead }}</p>
      <div class="home-hero__ctas">
        <a class="btn btn--catalog-fill" href="/pages/models/">{{ homeCopy.hero.ctaPrimary }}</a>
        <a class="btn btn--catalog" href="/pages/contact/">{{ homeCopy.hero.ctaSecondary }}</a>
      </div>
    </div>
  </div>
</section>
